<%- include('./inc/header') %>
<!-- ============================================================== -->
<!-- Start right Content here -->
<%- include('./inc/sidebar') %>
         
<!-- ============================================================== -->
<!-- Start right Content here -->
<!-- ============================================================== -->
<div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">


                        <div class="row">
                            <div class="col">

                                <div class="h-100">
                                    <div class="row">
                                        <div class="col-xl-4">
                                            <div class="row">
                                                <div class="col-xl-12 col-md-6">
                                                    <!-- card -->
                                                    <div class="card card-animate">
                                                        <div class="card-body">
                                                            <div class="d-flex justify-content-between">
                                                                <div class="flex-grow-1">
                                                                    <p class="text-uppercase fw-medium text-muted text-truncate fs-13">Bonus Amount</p>
                                                                    <h4 class="fs-22 fw-semibold mb-3">₦<span class="counter-value" data-target="<%= user.bonus ? user.bonus : 0; %>">0</span></h4>
                                                                    <div class="d-flex align-items-center gap-2">
                                                                        <button type="button" class="btn btn-sm btn-success btn-label rounded-pill">
                                                                            <i class="mdi mdi-wallet label-icon align-middle rounded-pill fs-16 me-2"></i> Withdraw
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                                <div class="avatar-sm flex-shrink-0">
                                                                    <span class="avatar-title bg-success-subtle rounded fs-3">
                                                                        <i class="bx bx-dollar-circle text-success"></i>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div><!-- end card body -->
                                                        <div class="animation-effect-6 text-success opacity-25 fs-18">
                                                            <i class="bi bi-currency-dollar"></i>
                                                        </div>
                                                        <div class="animation-effect-4 text-success opacity-25 fs-18">
                                                            <i class="bi bi-currency-pound"></i>
                                                        </div>
                                                        <div class="animation-effect-3 text-success opacity-25 fs-18">
                                                            <i class="bi bi-currency-euro"></i>
                                                        </div>
                                                    </div><!-- end card -->
                                                </div><!-- end col -->

                                                <div class="col-xl-12 col-md-6">
                                                    <!-- card -->
                                                    <div class="card card-animate">
                                                        <div class="card-body">
                                                            <div class="d-flex justify-content-between">
                                                                <div class="flex-grow-1">
                                                                    <p class="text-uppercase fw-medium text-muted text-truncate fs-13">Deposit Amount</p>
                                                                    <h4 class="fs-22 fw-semibold mb-3">₦<span class="counter-value" data-target="<%= user.deposit ? user.deposit : 0; %>">0</span></h4>
                                                                    <div class="d-flex align-items-center gap-2">
                                                                        <a href="./secure/deposit" class="btn btn-sm btn-primary btn-label rounded-pill">
                                                                            <i class="mdi mdi-wallet label-icon align-middle rounded-pill fs-16 me-2"></i> Deposit
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="avatar-sm flex-shrink-0">
                                                                    <span class="avatar-title bg-success-subtle rounded fs-3">
                                                                        <i class="bx bx-dollar-circle text-success"></i>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div><!-- end card body -->
                                                        <div class="animation-effect-6 text-info opacity-25 left fs-18">
                                                            <i class="bi bi-handbag"></i>
                                                        </div>
                                                        <div class="animation-effect-4 text-info opacity-25 left fs-18">
                                                            <i class="bi bi-shop"></i>
                                                        </div>
                                                        <div class="animation-effect-3 text-info opacity-25 left fs-18">
                                                            <i class="bi bi-bag-check"></i>
                                                        </div>
                                                    </div><!-- end card -->
                                                </div><!-- end col -->
                                            
                                                
                                            </div> <!-- end row-->
                                        </div>
                                        <div class="col-xl-8">
                                            <div class="card">
                                                <div class="card-header border-0 align-items-center d-flex">
                                                    <h4 class="card-title mb-0 flex-grow-1">Trade Stat.</h4>
                                                    <div>
                                                        <button type="button" class="btn btn-soft-secondary btn-sm">
                                                            1D
                                                        </button>
                                                    </div>
                                                </div><!-- end card header -->
                                            
                                                <div class="card-header p-0 border-0 bg-soft-light">
                                                    <% if(typeof trade !=='undefined' ){ trade.forEach(tr => { %>
                                                    <div class="row g-0 text-center">
                                                        <div class="col-6 col-sm-3">
                                                            <div class="p-3 border border-dashed border-start-0">
                                                                <h5 class="mb-1"><span class="text-success"><%= tr.data().status == 'running' ? 'On Going' : ''; %></span></h5>
                                                                <p class="text-muted mb-0">Trade</p>
                                                            </div>
                                                        </div>
                                                        <!--end col-->
                                                        <div class="col-6 col-sm-3">
                                                            <div class="p-3 border border-dashed border-start-0">
                                                                <h5 class="mb-1">₦<span class="counter-value" data-target="<%= tr.data().trade_earning %>"><%= tr.data().trade_earning %></span></h5>
                                                                <p class="text-muted mb-0">Earnings</p>
                                                            </div>
                                                        </div>
                                                        <!--end col-->
                                                        <div class="col-6 col-sm-3">
                                                            <div class="p-3 border border-dashed border-start-0">
                                                                <h5 class="mb-1">₦<span class="counter-value" data-target="<%= tr.data().paid %>"><%= tr.data().paid %></span></h5>
                                                                <p class="text-muted mb-0">Paid</p>
                                                            </div>
                                                        </div>
                                                        <!--end col-->
                                                        <div class="col-6 col-sm-3">
                                                            <div class="p-3 border border-dashed border-start-0 border-end-0">
                                                                <h5 class="mb-1 text-success"><span class="counter-value" data-target="<%= tr.data().trade_percent %>"><%= tr.data().trade_percent %></span>%</h5>
                                                                <p class="text-muted mb-0">Trading Ratio</p>
                                                            </div>
                                                        </div>
                                                        <!--end col-->
                                                    </div>
                                                    <% }) } %>
                                                </div><!-- end card header -->
                                            
                                                <div class="card-body p-0 pb-2">
                                                    <div class="w-100">
                                                        <div id="customer_impression_charts" data-colors='["--tb-dark", "--tb-primary", "--tb-secondary"]' class="apex-charts" dir="ltr"></div>
                                                    </div>
                                                </div><!-- end card body -->
                                            </div><!-- end card -->
                                        </div><!-- end col -->
                                    </div>

                                    <div class="row">
                                        <div class="col-xl-12">
                                            <!-- card -->
                                            <div class="card bg-info-subtle text-info border-0">
                                                <div class="card-body">
                                                    <div class="row gy-3">
                                                        <div class="col-sm">
                                                        <h5 class="card-title fs-17">Need To Get A House?</h5>
                                                        <p class="mb-0">Upgrade to pro for added benefits.</p>
                                                        </div>
                                                        <div class="col-sm-auto">
                                                            <button type="button" class="btn btn-info btn-label rounded-pill"><i class="ri-markup-line label-icon align-middle rounded-pill fs-16 me-2"></i> Upgrade Account</button>
                                                        </div>
                                                    </div>
                                                    <div class="position-absolute top-0 start-50 mt-2 opacity-25">
                                                        <i class="bi bi-shop display-4"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- end card -->
                                        </div>
                                        <!-- end col -->

                                        <div class="col-xl-12">
                                            <div class="card">
                                                <div class="card-header align-items-center d-flex">
                                                    <h4 class="card-title mb-0 flex-grow-1">Recent History</h4>
                                                </div><!-- end card header -->
                                            
                                                <div class="card-body">
                                                    <div class="table-responsive table-card">
                                                        <table class="table table-centered align-middle table-nowrap mb-0">
                                                            <thead class="text-muted table-light">
                                                                <tr>
                                                                    <th scope="col"> S/N</th>
                                                                    <th scope="col">Transaction</th>
                                                                    <th scope="col">Amount</th>
                                                                    <th scope="col">Date</th>
                                                                    <th scope="col">Status</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% if(typeof histories !== 'undefined'){ let i = 1; histories.forEach(history => { %>
                                                                <tr>
                                                                    <td>
                                                                        <a href="#!" class="fw-medium link-primary"><%= i++ %></a>
                                                                    </td>
                                                                    <td>
                                                                        <%= history.data().type %>
                                                                    </td>
                                                                    <td>
                                                                        <%= `₦${history.data().amount}` %>
                                                                    </td>
                                                                    <td><%= history.data().date %></td>
                                                                    <td>
                                                                        <% if(history.data().status == 'Pending'){ %>
                                                                            <span class="badge badge-soft-danger">Pending</span>
                                                                        <% } %>
                                                                        <% if(history.data().status=='success' ){ %>
                                                                            <span class="badge badge-soft-success">Deposited</span>
                                                                        <% } %>
                                                                        <% if(history.data().status=='running' ){ %>
                                                                            <span class="badge badge-soft-success">Started new trade</span>
                                                                        <% } %>
                                                                    </td>
                                                                                                                  
                                                                </tr>
                                                                <!-- end tr -->
                                                               <% }) } %>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </div>

                    </div>
                    <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


               
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

    </div>

<%- include('./modals/account_modal') %>
<%- include('./inc/footer') %>